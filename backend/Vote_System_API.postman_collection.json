{
  "info": {
    "name": "Vote System API",
    "description": "投票系统API接口集合",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "认证接口",
      "item": [
        {
          "name": "用户注册",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\",\n  \"confirmPassword\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "用户登录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "投票接口",
      "item": [
        {
          "name": "创建投票",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"最喜欢的编程语言\",\n  \"options\": [\"Go\", \"Python\", \"Java\", \"JavaScript\"],\n  \"multi\": false,\n  \"deadline\": 1693478400\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vote/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "create"]
            }
          }
        },
        {
          "name": "获取投票详情",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vote/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "1"]
            }
          }
        },
        {
          "name": "更新投票",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 1,\n  \"title\": \"最喜欢的编程语言(更新版)\",\n  \"options\": [\"Go\", \"Python\", \"Rust\", \"TypeScript\"],\n  \"multi\": true,\n  \"deadline\": 1693478400\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vote/update",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "update"]
            }
          }
        },
        {
          "name": "删除投票",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/vote/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "1"]
            }
          }
        },
        {
          "name": "提交投票",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vote_id\": 1,\n  \"option_ids\": [1]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/vote/submit",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "submit"]
            }
          }
        },
        {
          "name": "获取我创建的投票",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vote/my",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "my"]
            }
          }
        },
        {
          "name": "获取所有投票",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/vote/all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "vote", "all"]
            }
          }
        }
      ]
    }
  ]
}
